    "builders": [
        {
            "tags": {
                "git_sha": "{{ user `git_sha` }}", 
                "source_ami": "{{ user `source_ami` }}", 
                "creator": "{{ user `local_user` }}", 
                "timestamp": "{{ timestamp }}", 
