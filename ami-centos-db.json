                }
            ],
            "source_ami": "{{ user `source_ami` }}", 
            "name": "ami-centos-db", 
            "subnet_id": "{{ user `subnet_id` }}", 
            "region": "{{ user `aws_region` }}", 
            "ami_name": "{{ user `distro` }} {{ user `distro_version` }} {{ user `git_sha` }}/{{ timestamp }} - centos-db", 
            "ami_users": [
                "966157216157"
            ], 
            "instance_type": "{{ user `instance_type` }}", 
            "ssh_timeout": "10m", 
            "associate_public_ip_address": true, 
            "type": "amazon-ebs", 
