                }
            ],
            "ami_block_device_mappings": [
                {
                    "volume_size": 100, 
                    "delete_on_termination": true, 
                    "volume_type": "gp2", 
                    "device_name": "/dev/xvda"
                },
                {
                    "volume_size": 300, 
                    "delete_on_termination": false,
                    "volume_type": "gp2",
